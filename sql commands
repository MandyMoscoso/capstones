CREATE TABLE users (
    username VARCHAR NOT NULL PRIMARY KEY,
    password VARCHAR ,
    firstname VARCHAR ,
    lastname VARCHAR,
    email VARCHAR
);

CREATE TABLE username (
    location_name VARCHAR,
    location_address VARCHAR,
    location_id VARCHAR,
    opening_hrs VARCHAR,
    username VARCHAR  REFERENCES users (username)
);

